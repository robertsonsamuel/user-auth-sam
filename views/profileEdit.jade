html
  head
    link(href='vendor/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='vendor/sweetalert/dist/sweetalert.css', rel='stylesheet')
   body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#nav-collapse', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')= title
        #nav-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a#logout Logout
    .container
          h1 Edit Profile
          hr
          .row
            // left column
            .col-md-3
              .text-center
                img.avatar.img-circle(src='//placehold.it/100', alt='avatar' id="imageAvatar")
                h6 Put photo URL
                input#newAvatar.form-control(type='text')
            // edit form column
            .col-md-9.personal-info
              h3 Personal info
              form.form-horizontal(role='form')
                .form-group
                  label.col-lg-3.control-label Name:
                  .col-lg-8
                    input#newName.form-control(type='text', placeholder='Jane')
                .form-group
                  label.col-lg-3.control-label Email:
                  .col-lg-8
                    input#newEmail.form-control(type='text', placeholder='janesemail@gmail.com')
                .form-group
                  label.col-md-3.control-label
                  .col-md-8
                    input.btn.btn-primary(type='button', value='Save Changes' id="saveButton")
                    span
                    input.btn.btn-default(type='reset', value='Cancel' id="cancelEdit")
    

        script(src='vendor/jquery/dist/jquery.min.js')
        script(src='vendor/bootstrap/dist/js/bootstrap.min.js')
        script(src='vendor/sweetalert/dist/sweetalert.min.js')
        script(src='../js/profileEdit.js')  
       

